<h1>Awesome Products</h1>
<div class="row">
<% @products.each do |product| %>
  <div class="col-12">
    <div class="card">
      <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" class="card-img-top" height="60" />
      <div class="card-body">
        <h2 class="card-title"><%= product.title %> </h2>
        <p class="card-text"><%= product.description %> </p>
      </div>
    </div>
  </div>
<% end %>
</div>
